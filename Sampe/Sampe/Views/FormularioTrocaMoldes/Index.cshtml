@model IEnumerable<Sampe.FormularioTrocaMolde>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="col-lg-12 col-sm-12 col-md-8">
        <h2>Index</h2>
        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Maquina.NomeMaquina)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Usuario.NomeUsuario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DtRetirada)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Supervisor)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Maquina.NomeMaquina)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario.NomeUsuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DtRetirada)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Supervisor)
                        </td>
                        <td>
                            <a href="/FormularioTrocaMoldes/Edit/@item.FormularioTrocaMoldeId" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-pencil"></span></a>
                            <a href="/FormularioTrocaMoldes/Delete/@item.FormularioTrocaMoldeId" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>