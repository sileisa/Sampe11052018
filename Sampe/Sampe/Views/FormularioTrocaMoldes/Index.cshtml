@model IEnumerable<Sampe.FormularioTrocaMolde>

@{
    ViewBag.Title = "Formulários de Troca de Molde";
}

<div class="container">
    <div class="col-lg-12 col-sm-12 col-md-8">

        <h2>Formulários de Troca de Molde</h2>

       
        <table class="table table-responsive">
            <tr>
                <th>
                    Máquina
                </th>
                <th>
                    Molde
                </th>
                <th>
                    Executor
                </th>
                <th>
                    Data de Retirada
                </th>

                <th>
                    Início
                </th>
                <th>
                    Fim
                </th>
                <th>
                    Data Colocada
                </th>
                <th>
                    Início
                </th>
                <th>
                    Fim
                </th>
                <th>
                   Supervisor
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Maquina.NomeMaquina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Molde.NomeMolde)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.NomeUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DtRetirada)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ColocarInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ColocarFim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DtColocar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RetirarInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RetirarFim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supervisor)
                </td>
                <td>
                    <a href="/Usuarios/Edit/@item.UsuarioId" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-pencil"></span></a>
                    <a href="/Usuarios/Delete/@item.UsuarioId" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-trash"></span></a>
                </td>

            </tr>

            }

        </table>
    </div>
</div>